<div class="row">
<div class="col-3"></div>
<div class="col-6">
<div class="card">
  <div class="card-body">
    <p>
      <% if @post.images.attached? %>
        <% @post.images.each do |image| %>
          <%= image_tag check_images(image), class:"w-100" %>
        <% end %>
      <% end %>
    </p>
    <h5 class="card-title"><%= @post.title %></h5>
    <p class="card-text"><%= @post.description %></p>
    <p class="card-text"><%= @post.item_type %></p>
    <% if @post.user == current_user %>
        <%= link_to "Edit", edit_post_path(@post.id), class:"btn btn-success" %>
    <% end %>
    <% if buyBtn(@post.id) %>
    <%= render "buy" %>
    <%else%>
    sold
    <% end %>
  </div>
</div>
</div>
<div class="col-3"></div>
</div>