<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <h2 class="text-center">投稿ページ</h2>
        <%= form_with(model: @post, url: posts_path, local:true) do |f| %>
            <div class="form-group">
                <%= f.label :images %>
                <%= f.file_field :images, direct_upload: true, multiple: true %>
            </div>
            <% @post.images.each do |image|%>
                <div class="col-4">
                    <div class="card">
                        <%= image_tag image, class:"card-img-top" %>
                        <div class="card-body">
                            <%#= link_to "Delete", delete_photo_room_path(image), method: :delete, class:"btn btn-danger"%> 
                        </div>
                    </div>
                </div>
            <% end %>
            <div class="form-group">
                <%= f.label :title, "Title" %>
                <%= f.text_field :title, class:"form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :description, "Description" %>
                <%= f.text_field :description, class:"form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :price, "Price" %>
                <%= f.number_field :price, class:"form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :item_type, "Item type" %>
                <%= f.select :item_type, {'レンタル': "rental", '販売': "buy"}, { include_blank: '選択してください' }, { class: "custom-select mr-sm-2", required: true }%>   
            </div>
            <%= f.submit "Submit", class:"btn btn-success btn-block" %>
        <% end %>
    </div>
    <div class="col-3"></div>
</div>

