<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#buyModal">
  購入
</button>

<!-- Modal -->
<div class="modal fade" id="buyModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">タイトル</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table mt-4">
        <p>購入後＝に振り込んでください</p>
            <tbody>
                <tr>
                    <th scope="row">Name</th>
                    <td><%= @post.title %></td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td><%= @post.description %></td>
                </tr>
                <tr>
                    <th scope="row">Price</th>
                    <td><%= @post.price %></td>
                </tr>
                <tr>
                    <th scope="row">投稿者</th>
                    <td><%#= @post.users.email %></td>
                </tr>
                <tr>
                    <th scope="row">商品タイプ</th>
                    <td><%= @post.item_type %><td>
                </tr>
            </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">とじる</button>
        <%# <button type="button" class="btn btn-primary">購入する</button> %>
        <%= form_with(model: @buy,url: buys_path, local: true) do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :post_id, value: @post.id %>
            <%= f.hidden_field :price, value: @post.price %>
            <%= f.submit "Buy",class:"btn btn-primary btn-block" %>
        <%end%>
      </div>
    </div>
  </div>
</div>